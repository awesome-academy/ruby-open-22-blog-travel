<% provide :title, !@user.nil? ? @user.name : t(".not_exits") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user %>
      <h1>
        <%= @user.name %>
      </h1>
      <div>
        <%= image_tag("avatar.jpeg", alt: "avatar", class: "img-avatar") %> 
      </div>
      <% end %>
    </section>
    <section class="stats">
      <%#= render "shared/stats" %>
    </section>
  </aside>
</div>