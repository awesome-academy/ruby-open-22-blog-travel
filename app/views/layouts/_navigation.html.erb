<header class="header_custom">
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top " id="mainNav">
    <div class="container">
      <%= link_to t(".logo"), root_path , class: "navbar-brand js-scroll-trigger" %>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <%= t(".menu") %>
        <i class="fa fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav text-uppercase ml-auto">
          <li class="nav-item">
            <%= link_to t(".home"), root_url, class: "nav-link js-scroll-trigger" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".new"), "#", class: "nav-link js-scroll-trigger" %>
          </li>
          <li class="nav-item">
            <%= link_to t(".about"), "#", class: "nav-link js-scroll-trigger" %>
          </li>
          <li class="nav-item">
            <% if logged_in? %>
            <li>
            <li class="login-header"><%= link_to t(".user"), users_path, class: "a-login"%></li>
            </li>
            <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t(".account") %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), "#",class: "a-login" %></li>
              <li><%= link_to t(".setting"), "#",class: "a-login" %></li>
              <li></li>
              <li>
                <%= link_to t(".logout"), logout_path,class: "a-login", method: :delete %>
              </li>
            </ul>
            </li>
            <% else %>
              <li class="login-header"><%= link_to t(".login"), login_path ,class: "a-login"%></li>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to image_tag("us.png", alt: "en"), locale:"en" %>
          </li>
          <li class="nav-item">
            <%= link_to image_tag("vn.png", alt: "vi"), locale:"vi" %>
          </li>
        </ul>
      </div>
</header>
