<br><br><br><br><% provide :title, t(".title_index") %>
<div class="container">
  <h3 class="title"><%= t ".last_blog" %></h3>
  <% @blogs.sort_by_time.each do |blog| %>
    <div class="box">
      <div class="cover_photo_blog_index">
        <%= image_tag blog.cover_photo.to_s, class: "img_thumbnail" %>
      </div>
      <div class="post-article">
        <span><%= link_to blog.topic, blog, class: "topic_blog crop_text_2" %> </span>
      </div>
    </div>
  <% end %>
</div>
